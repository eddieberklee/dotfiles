# MobileConfig
mc() {
  ${FBANDROID_DIR}/scripts/dumpapp mobileconfig qe set $1 $2:$3
  ${FBANDROID_DIR}/scripts/restart_fb4a
  echo "\n"
}
mco() {
  ${FBANDROID_DIR}/scripts/dumpapp mobileconfig override $1 $2
}
hc() {
  hg commit -m "$1"
}
hur() {
  hg up $1;
  hg rebase -d $2;
}
hu() {
  hg up $1;
}
hre() {
  hg rebase -s $1 -d $2;
}
